{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "crons": [
    {
      "path": "/api/cron/weekly-reports",
      "schedule": "0 14 * * 0"
    },
    {
      "path": "/api/cron/weekly-reports",
      "schedule": "0 14 * * 1"
    },
    {
      "path": "/api/cron/outcome-reminders",
      "schedule": "0 14 * * *"
    },
    {
      "path": "/api/cron/lead-score-recalc",
      "schedule": "0 7 * * *"
    },
    {
      "path": "/api/cron/pipeline-notifications",
      "schedule": "0 13 * * *"
    },
    {
      "path": "/api/cron/crm-activity-report",
      "schedule": "0 14 * * 1"
    },
    {
      "path": "/api/cron/auto-deduplication",
      "schedule": "0 3 * * 0"
    }
  ],
  "headers": [
    {
      "source": "/api/cron/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    }
  ]
}
