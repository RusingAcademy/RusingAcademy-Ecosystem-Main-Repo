# =============================================================================
# RusingAcademy Ecosystem - Railway Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# For Railway deployment, add these in the Variables tab
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE (Required)
# -----------------------------------------------------------------------------
# MySQL/TiDB connection string
DATABASE_URL=mysql://username:password@host:port/database?ssl={"rejectUnauthorized":true}

# -----------------------------------------------------------------------------
# AUTHENTICATION (Required)
# -----------------------------------------------------------------------------
# Secret key for JWT session signing (generate with: openssl rand -hex 32)
JWT_SECRET=your-jwt-secret-here-min-32-chars

# Application ID (generate a UUID or use any unique identifier)
VITE_APP_ID=rusingacademy-railway

# Application URL (your Railway domain)
VITE_APP_URL=https://your-app.railway.app

# Owner email for admin notifications
OWNER_EMAIL=admin@rusingacademy.ca

# Owner Open ID (for admin user identification - use email or UUID)
OWNER_OPEN_ID=admin@rusingacademy.ca

# -----------------------------------------------------------------------------
# OAUTH (Optional - set to "true" to enable social logins)
# -----------------------------------------------------------------------------
# Set to "true" only if you have OAuth configured (Manus, Clerk, etc.)
VITE_OAUTH_ENABLED=false

# Manus OAuth (only if using Manus OAuth)
# OAUTH_SERVER_URL=https://oauth.manus.ai
# VITE_OAUTH_PORTAL_URL=https://oauth.manus.ai

# -----------------------------------------------------------------------------
# STRIPE PAYMENTS (Required for payments)
# -----------------------------------------------------------------------------
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Publishable key for frontend
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# -----------------------------------------------------------------------------
# EMAIL / SMTP (Required for email features)
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=RusingAcademy <noreply@rusingacademy.ca>
SMTP_FROM_NAME=RusingAcademy

# -----------------------------------------------------------------------------
# CRON JOBS (Required for scheduled tasks)
# -----------------------------------------------------------------------------
# Secret to protect cron endpoints (generate with: openssl rand -hex 16)
CRON_SECRET=your-cron-secret-here

# -----------------------------------------------------------------------------
# OPTIONAL INTEGRATIONS
# -----------------------------------------------------------------------------
# CRM Webhooks (optional)
# CRM_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
# CRM_DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...
# CRM_CUSTOM_WEBHOOK_URL=https://your-webhook.com/...
# CRM_CUSTOM_WEBHOOK_SECRET=your-secret

# Calendly Integration (optional)
# CALENDLY_WEBHOOK_SECRET=your-calendly-secret

# Manus Forge API (optional - for AI features)
# BUILT_IN_FORGE_API_URL=https://forge.manus.ai
# BUILT_IN_FORGE_API_KEY=your-forge-api-key
# VITE_FRONTEND_FORGE_API_URL=https://forge.manus.ai

# -----------------------------------------------------------------------------
# RUNTIME
# -----------------------------------------------------------------------------
NODE_ENV=production
PORT=3000
